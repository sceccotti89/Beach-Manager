<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="match_parent" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="#DDDDDD"
		android:id="@+id/cabins_deckchairs_root" >

	    <TextView
			android:id="@+id/textViewCabins"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="15dip"
			android:textAppearance="?android:attr/textAppearanceMediumInverse"
			android:text="@string/total_free_cabins"
			android:textColor="#000000" />

	    <LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			android:id="@+id/cabins_place" >

		    <EditText
				android:id="@+id/total_cabins_edit"
				android:layout_height="wrap_content"
				android:layout_width="0dip"
				android:layout_weight="0.5"
				android:layout_marginLeft="15dip"
				android:layout_marginRight="2dip"
				android:scrollHorizontally="true"
				android:inputType="none"
				android:focusable="false"
				android:singleLine="true"
				android:gravity="fill_horizontal"
				android:textAppearance="?android:attr/textAppearanceMediumInverse" />

		    <EditText
				android:id="@+id/free_cabins_edit"
				android:layout_height="wrap_content"
				android:layout_width="0dip"
				android:layout_weight="0.5"
				android:layout_marginLeft="3dip"
				android:layout_marginRight="15dip"
				android:scrollHorizontally="true"
				android:inputType="none"
				android:focusable="false"
				android:singleLine="true"
				android:gravity="fill_horizontal"
				android:textAppearance="?android:attr/textAppearanceMediumInverse" />

	    </LinearLayout>

	    <TextView
			android:id="@+id/textViewPriceCabins"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="15dip"
			android:textAppearance="?android:attr/textAppearanceMediumInverse"
			android:text="@string/price_cabin"
			android:textColor="#000000" />

	    <EditText
			android:id="@+id/price_cabins_edit"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:layout_marginLeft="15dip"
			android:layout_marginRight="15dip"
			android:maxLength="8"
			android:scrollHorizontally="true"
			android:inputType="numberDecimal"
			android:singleLine="true"
			android:gravity="fill_horizontal"
			android:textAppearance="?android:attr/textAppearanceMedium" />

		<TextView
			android:id="@+id/textViewDeckchairs"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="15dip"
			android:textAppearance="?android:attr/textAppearanceMediumInverse"
			android:text="@string/total_free_deckchairs"
			android:textColor="#000000" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			android:id="@+id/deckchairs_place" >

			<EditText
				android:id="@+id/total_deckchairs_edit"
				android:layout_height="wrap_content"
				android:layout_width="0dip"
				android:layout_weight="0.5"
				android:layout_marginLeft="15dip"
				android:layout_marginRight="2dip"
				android:scrollHorizontally="true"
				android:inputType="none"
				android:focusable="false"
				android:singleLine="true"
				android:gravity="fill_horizontal"
				android:textAppearance="?android:attr/textAppearanceMedium" />

			<EditText
				android:id="@+id/free_deckchairs_edit"
				android:layout_height="wrap_content"
				android:layout_width="0dip"
				android:layout_weight="0.5"
				android:layout_marginLeft="3dip"
				android:layout_marginRight="15dip"
				android:scrollHorizontally="true"
				android:inputType="none"
				android:focusable="false"
				android:singleLine="true"
				android:gravity="fill_horizontal"
				android:textAppearance="?android:attr/textAppearanceMedium" />

		</LinearLayout>

		<TextView
			android:id="@+id/textViewPriceDeckchairs"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="15dip"
			android:textAppearance="?android:attr/textAppearanceMediumInverse"
			android:text="@string/price_deckchair"
			android:textColor="#000000" />

		<EditText
			android:id="@+id/price_deckchairs_edit"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:layout_marginLeft="15dip"
			android:layout_marginRight="15dip"
			android:maxLength="8"
			android:scrollHorizontally="true"
			android:inputType="numberDecimal"
			android:singleLine="true"
			android:gravity="fill_horizontal"
			android:textAppearance="?android:attr/textAppearanceMedium" />

	</LinearLayout>

</ScrollView>